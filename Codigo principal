from flask import Flask, render_template, request, redirect, url_for, flash
import json
import os

app = Flask(__name__)
app.secret_key = 'clave_secreta'

USERS_FILE = 'usuarios.json'

def cargar_usuarios():
    if os.path.exists(USERS_FILE):
        with open(USERS_FILE, 'r') as f:
            return json.load(f)
    return {}

def guardar_usuarios(usuarios):
    with open(USERS_FILE, 'w') as f:
        json.dump(usuarios, f)

@app.route('/')
def home():
    return render_template('index.html')

@app.route('/portal')
def portal():
    return render_template('portal.html')

@app.route('/login', methods=['GET', 'POST'])
def login():
    usuarios = cargar_usuarios()
    if request.method == 'POST':
        correo = request.form['email']
        contrase√±a = request.form['password']
        tipo_usuario = request.form['tipo_usuario']

        if (correo in usuarios and
            usuarios[correo]['password'] == contrase√±a and
            usuarios[correo]['tipo_usuario'] == tipo_usuario):
            flash('‚úÖ Sesi√≥n iniciada correctamente.')
            return redirect(url_for('portal'))
        else:
            flash('‚ùå Credenciales incorrectas.')

    return render_template('login.html')

@app.route('/register', methods=['GET', 'POST'])
def register():
    usuarios = cargar_usuarios()
    if request.method == 'POST':
        nombre = request.form['nombre']
        correo = request.form['email']
        password = request.form['password']
        confirmar = request.form['confirmar']
        tipo_usuario = request.form['tipo_usuario']

        if password != confirmar:
            flash('‚ùå Las contrase√±as no coinciden.')
            return redirect(url_for('register'))

        if correo in usuarios:
            flash('‚ùå Ya existe un usuario con ese correo.')
            return redirect(url_for('register'))

        usuarios[correo] = {
            'nombre': nombre,
            'password': password,
            'tipo_usuario': tipo_usuario
        }

        guardar_usuarios(usuarios)
        flash('‚úÖ Registro exitoso. Ahora puedes iniciar sesi√≥n.')
        return redirect(url_for('login'))

    return render_template('register.html')

@app.route('/recover', methods=['GET', 'POST'])
def recover():
    if request.method == 'POST':
        correo = request.form['email']
        usuarios = cargar_usuarios()
        if correo in usuarios:
            flash('üìß Correo encontrado. Pronto recibir√°s instrucciones.')
        else:
            flash('‚ùå No se encontr√≥ ese correo.')
        return redirect(url_for('recover'))

    return render_template('recover.html')

@app.route('/servicios')
def servicios():
    try:
        return render_template('servicios.html')
    except Exception as e:
        return f"Error al cargar plantilla servicios.html: {e}"

